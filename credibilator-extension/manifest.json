  {
    "name": "Credibilator",
    "version": "1.1",
    "description": "Analyses pages to assess (and explain) their credibility. Uses AI to learn from previously seen trustworthy or fake news sources.",
    "permissions": [
      "scripting",
	     "activeTab",
	     "tabs"],
    "host_permissions": [
      "https://cs.uns.edu.ar/"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
    	"16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128_pad.png"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "manifest_version": 3,
    "homepage_url": "https://github.com/piotrmp/credibilator"
    }
